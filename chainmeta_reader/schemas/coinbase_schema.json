{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Coinbase Open Chain Meta",
    "description": "Coinbase's Open Chain Metadata Schema",
    "type": "object",
    "required": [
        "metadata"
    ],
    "properties": {
        "metadata": {
            "description": "",
            "type": "array",
            "items": {
                "description": "",
                "type": "object",
                "required": [
                    "address",
                    "network_name",
                    "categories",
                    "submitted_by",
                    "last_updated"
                ],
                "properties": {
                    "address": {
                        "$ref": "/schemas/address"
                    },
                    "network_name": {
                        "$ref": "/schemas/network_name"
                    },
                    "entity": {
                        "$ref": "/schemas/entity"
                    },
                    "name": {
                        "type": "string"
                    },
                    "categories": {
                        "type": "array",
                        "items": {
                            "$ref": "/schemas/category"
                        }
                    },
                    "submitted_by": {
                        "type": "string"
                    },
                    "last_updated": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    },
    "$defs": {
        "address": {
            "$id": "/schemas/address",
            "type": "string"
        },
        "network_name": {
            "$id": "/schemas/network_name",
            "type": "string",
            "format": "[a-z]*_[a-z]*"
        },
        "entity": {
            "$id": "/schemas/entity",
            "type": "string"
        },
        "category": {
            "$id": "/schemas/category",
            "type": "string"
        }
    }
}
